

<!-- ----- banner ----- -->
<div class="banner text-center" style="">
    <h1><strong>Pimp</strong> my <strong>Cocktails</strong></h1>
    <p>Create your own cocktails</p>
</div>


<div class="container my-5">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <%# image_path = cocktail.photo.attached? ? cl_image_path(cocktail.photo.key, height: 300, width: 400, crop: :fill) : "https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60" %>
         <%#
           if cocktail.photo.attachment
            image_path = cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill
          else
          image_path = "https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60"
          end
         %>
         <% if cocktail.photo.attached? %>

            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(cocktail.photo.key, height: 300, width: 400, crop: :fill) %>')">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>

          <% else %>

            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60')">
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
         <% end %>

      </div>
    <% end %>
  </div>

</div>







