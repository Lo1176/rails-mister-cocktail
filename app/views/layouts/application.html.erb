<!DOCTYPE html>
<html>
  <head>
    <title>RailsMisterCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body style="padding-top: 70px">
    <div class="page-container">
      <div class="navbar navbar-expand-sm navbar-light navbar-cocktails px-5">
        <div class="">
          <%= link_to "#", class: "navbar-brand" do %>
            <%= image_tag "cocktail.png" %>
          <% end %>
        </div>

        <div class="ml6 pt-4">
          <h1 class="">
            <span class="text-wrapper">
              <span class="letters"><strong>Pimp</strong> my <strong>Cocktails</strong> </span>
            </span>
          </h1>


        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to "Home", cocktails_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Add a cocktail 🍸', new_cocktail_path, class: "btn btn-outline-info mx-5" %>
            </li>

          </ul>
        </div>
      </div>


      <%= yield %>

      <!-- --------footer------------- -->
      <div class="footer">
        <div class="footer-links">
          <a href="#"><i class="fab fa-github"></i></a>
          <a href="#"><i class="fab fa-instagram"></i></a>
          <a href="#"><i class="fab fa-facebook"></i></a>
          <a href="#"><i class="fab fa-twitter"></i></a>
          <a href="#"><i class="fab fa-linkedin"></i></a>
        </div>
      </div>

    </div>

  </body>
</html>
